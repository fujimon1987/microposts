<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
      </h1>
    </section>
    <p>name: <%= @user.name %></p>
    <p>area: <%= @user.area %></p>
    <p>email: <%= @user.email %></p>
    <p><%= link_to 'followers', followers_user_path(@user) %>   <%= link_to 'followings', followings_user_path(@user) %></p>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="Microposts">
      <%= render @microposts %>
    </ol>
    <% end %>
  </div>
</div>